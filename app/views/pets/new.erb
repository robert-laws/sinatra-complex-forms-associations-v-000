<h1>Create a new Pet</h1>

<form action="/pets/" method="POST">
  <label>Pet Name:</label> <input type="text" name="pet[name]" id="pet_name">

  <p>choose an existing owner:</p>

  <% @owners.each do |owner| %>
    <input type="checkbox" name="pet[owner_id][]" value="<%= owner.id %>" id="<%= owner.id %>">
      <%= owner.name %>
    </input>
  <% end %>

  <p>and/or create a new owner:</p>

  <label>Owner Name:</label> <input type="text" name="owner_name" id="owner_name">

  <br><br>

  <input type="submit" id="Create Pet" value="Create Pet">
</form>
